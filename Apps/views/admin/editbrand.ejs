  <%- include('partials/scripts') %>
  <!-- Initialize Lucide Icons -->
  <script>
    if (typeof lucide !== 'undefined') {
      lucide.createIcons();
    }
  </script>
  <!-- Mobile sidebar toggle -->
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const sidebar = document.getElementById('sidebar');
      const openSidebarBtn = document.getElementById('openSidebar');
      const closeSidebarBtn = document.getElementById('closeSidebar');
      
      if (openSidebarBtn) {
        openSidebarBtn.addEventListener('click', function() {
          sidebar.classList.remove('-translate-x-full');
        });
      }
      
      if (closeSidebarBtn) {
        closeSidebarBtn.addEventListener('click', function() {
          sidebar.classList.add('-translate-x-full');
        });
      }
      
      // Close sidebar when clicking outside on mobile
      document.addEventListener('click', function(event) {
        const isClickInsideSidebar = sidebar.contains(event.target);
        const isClickOnOpenBtn = openSidebarBtn && openSidebarBtn.contains(event.target);
        
        if (!isClickInsideSidebar && !isClickOnOpenBtn && window.innerWidth < 1024 && !sidebar.classList.contains('-translate-x-full')) {
          sidebar.classList.add('-translate-x-full');
        }
      });
    });
  </script>
  <script>
    document.getElementById("updateBrandBtn").addEventListener("click", async function () {
      Swal.fire({
        title: "Confirm Update",
        text: "Are you sure you want to update this brand?",
        icon: "warning",
        showCancelButton: true,
        confirmButtonText: "Yes, update it!",
        cancelButtonText: "Cancel",
        customClass: {
          popup: 'shadow-xl',
          confirmButton: 'bg-blue-600 text-white px-4 py-1.5 rounded-md shadow-md hover:shadow-lg hover:bg-blue-700 text-sm',
          cancelButton: 'bg-gray-100 text-gray-700 px-4 py-1.5 rounded-md shadow-md hover:shadow-lg hover:bg-gray-200 text-sm'
        }
      }).then(async (result) => {
        if (result.isConfirmed) {
          const form = document.getElementById("editBrandForm");
          const formData = new FormData(form);
          try {
            const response = await fetch(`/admin/editbrand/<%= brand._id %>`, {
              method: "PUT",
              body: formData
            });
            const data = await response.json();
            if (response.ok && data.success) {
              Swal.fire({
                title: "Success!",
                text: data.message,
                icon: "success",
                customClass: {
                  popup: 'shadow-xl',
                  confirmButton: 'bg-blue-600 text-white px-4 py-1.5 rounded-md shadow-md hover:shadow-lg hover:bg-blue-700 text-sm'
                }
              }).then(() => {
                window.location.href = "/admin/brands";
              });
            } else {
              Swal.fire({
                title: "Error!",
                text: data.message || "Failed to update brand",
                icon: "error",
                customClass: {
                  popup: 'shadow-xl',
                  confirmButton: 'bg-blue-600 text-white px-4 py-1.5 rounded-md shadow-md hover:shadow-lg hover:bg-blue-700 text-sm'
                }
              });
            }
          } catch (error) {
            console.error("Error updating brand:", error);
            Swal.fire({
              title: "Error!",
              text: "An error occurred while updating the brand.",
              icon: "error",
              customClass: {
                popup: 'shadow-xl',
                confirmButton: 'bg-blue-600 text-white px-4 py-1.5 rounded-md shadow-md hover:shadow-lg hover:bg-blue-700 text-sm'
              }
            });
          }
        }
      });
    });
  </script>
