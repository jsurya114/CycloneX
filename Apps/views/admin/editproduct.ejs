<!DOCTYPE HTML>
<html lang="en">

<%- include('partials/head') %>
<body>
    <div class="screen-overlay"></div>
    <aside class="navbar-aside" id="offcanvas_aside">
        <!-- Your existing aside content -->
    </aside>
    <main class="main-wrap">
        <%- include('partials/header') %>
        <section class="content-main">
            <div class="row">
                <div class="col-6">
                    <div class="content-header">
                        <h2 class="content-title">Edit Product</h2>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6">
                    <form id="editProductForm" action="/admin/edit-product/<%= product._id %>" method="POST" enctype="multipart/form-data">
                        <!-- Hidden input for product ID -->
                        <input type="hidden" name="productId" value="<%= product._id %>">

                        <div class="mb-4">
                            <label class="form-label">Product title</label>
                            <input type="text" name="productName" placeholder="Type here" class="form-control" value="<%= product.productName %>" required>
                        </div>
                        <div class="mb-4">
                            <label class="form-label">Description</label>
                            <textarea name="description" placeholder="Type here" class="form-control" rows="4" required><%= product.description %></textarea>
                        </div>
                        <div class="mb-4">
                            <label class="form-label">Brand</label>
                            <select class="form-select" name="brands" required>
                                <% brands.forEach(brand => { %>
                                    <option value="<%= brand._id %>" <%= brand._id.toString() === product.brands._id.toString() ? 'selected' : '' %>>
                                        <%= brand.name %>
                                    </option>
                                <% }) %>
                            </select>
                        </div>
                        <div class="mb-4">
                            <label class="form-label">Category</label>
                            <select class="form-select" name="category" required>
                                <% category.forEach(cat => { %>
                                    <option value="<%= cat._id %>" <%= product.category&&product.category._id.toString() === product.category._id.toString() ? 'selected' : '' %>>
                                        <%= cat.name %>
                                    </option>
                                <% }) %>
                            </select>
                        </div>
                        <div class="mb-4">
                            <label class="form-label">Price</label>
                            <input type="number" name="price" placeholder="00.0" class="form-control" value="<%= product.price %>" required>
                        </div>
                        <div class="mb-4">
                            <label class="form-label">Images</label>
                            <input class="form-control" type="file" name="productImage" multiple>
                            <!-- Display existing images -->
                            <% if (product.images && product.images.length > 0) { %>
                                <div class="mt-3">
                                    <p>Current Images:</p>
                                    <% product.images.forEach(image => { %>
                                        <img src="/backend/imgs/addproduct/<%= image %>" alt="Product Image" style="width: 100px; height: 100px; margin-right: 10px;">
                                    <% }) %>
                                </div>
                            <% } %>
                        </div>
                        <button type="submit" class="btn btn-light rounded font-sm mr-5 text-body hover-up">Update Product</button>
                    </form>
                </div>
            </div>
        </section> <!-- content-main end// -->
        <%- include('partials/footer') %>
    </main>
    <script>
        document.getElementById('editProductForm').addEventListener('submit', async function(event) {
            event.preventDefault();
        
            const formData = new FormData(this);
            const productId = formData.get('productId');
        
            const result = await Swal.fire({
                title: 'Confirm Update?',
                text: "Do you want to save these changes?",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: 'Yes, update it!',
                cancelButtonText: 'Cancel'
            });
        
            if (result.isConfirmed) {
                fetch(`/admin/editproduct/${productId}`, {
                    method: 'PUT',
                    body: formData
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        Swal.fire('Updated!', 'Product updated successfully.', 'success')
                        .then(() => window.location.href = '/admin/product-list2');
                    } else {
                        Swal.fire('Error', 'Failed to update product.', 'error');
                    }
                })
                .catch(error => {
                    console.error(error);
                    Swal.fire('Error', 'Something went wrong.', 'error');
                });
            }
        });
        </script>
        
    <%- include('partials/scripts') %>
    
</body>

</html>