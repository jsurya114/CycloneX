    <!-- Add Toastify JS -->
    <script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>

    <script>
        // Cart state management
        let cartState = {
            items: [],
            totalSubtotal: 0,
            taxRate: 0.18, // 18% tax rate
            taxAmount: 0,
            finalTotal: 0,
            itemCount: 0
        };

        // Initialize cart state from server data
        document.addEventListener('DOMContentLoaded', function() {
            // Extract cart data from the page
            const subtotalElement = document.getElementById('cart-subtotal');
            const taxElement = document.getElementById('cart-tax');
            const totalElement = document.getElementById('cart-total');
            const itemCountElement = document.getElementById('cart-item-count');
            
            if (subtotalElement && taxElement && totalElement) {
                cartState.totalSubtotal = parseFloat(subtotalElement.textContent.replace('₹', '')) || 0;
                cartState.taxAmount = parseFloat(taxElement.textContent.replace('₹', '')) || 0;
                cartState.finalTotal = parseFloat(totalElement.textContent.replace('₹', '')) || 0;
                
                // Extract item count from the text
                if (itemCountElement) {
                    const countText = itemCountElement.textContent;
                    const match = countText.match(/$$(\d+)\s+items$$/);
                    if (match && match[1]) {
                        cartState.itemCount = parseInt(match[1]);
                    }
                }
                
                // Extract items data
                const itemElements = document.querySelectorAll('.cart-item');
                itemElements.forEach(item => {
                    const productId = item.id.replace('cart-item-', '');
                    const quantityInput = document.getElementById(`quantity-${productId}`);
                    const subtotalElement = document.getElementById(`subtotal-${productId}`);
                    
                    if (quantityInput && subtotalElement) {
                        const quantity = parseInt(quantityInput.value);
                        const price = parseFloat(quantityInput.dataset.productPrice) || 0;
                        const subtotal = parseFloat(subtotalElement.textContent.replace('₹', '')) || 0;
                        
                        cartState.items.push({
                            productId,
                            quantity,
                            price,
                            subtotal
                        });
                    }
                });
            }
            
            // Initialize dark mode
            const darkModeToggle = document.getElementById('darkModeToggle');
            const html = document.documentElement;
            
            // Check for saved theme preference or use system preference
            if (localStorage.getItem('darkMode') === 'true' || 
                (!localStorage.getItem('darkMode') && 
                window.matchMedia('(prefers-color-scheme: dark)').matches)) {
                html.classList.add('dark');
            }
            
            // Toggle dark mode
            darkModeToggle.addEventListener('click', function() {
                html.classList.toggle('dark');
                localStorage.setItem('darkMode', html.classList.contains('dark'));
            });
        });

        // Function to update cart state and UI
        function updateCartState(data) {
            // Update cart totals
            if (data.cartSubtotal !== undefined) {
                cartState.totalSubtotal = data.cartSubtotal;
                const subtotalElement = document.getElementById('cart-subtotal');
                if (subtotalElement) {
                    subtotalElement.textContent = `₹${data.cartSubtotal.toFixed(2)}`;
                    subtotalElement.classList.add('highlight-update');
                    setTimeout(() => subtotalElement.classList.remove('highlight-update'), 1500);
                }
            }
            
            if (data.taxAmount !== undefined) {
                cartState.taxAmount = data.taxAmount;
                const taxElement = document.getElementById('cart-tax');
                if (taxElement) {
                    taxElement.textContent = `₹${data.taxAmount.toFixed(2)}`;
                    taxElement.classList.add('highlight-update');
                    setTimeout(() => taxElement.classList.remove('highlight-update'), 1500);
                }
            }
            
            if (data.finalTotal !== undefined) {
                cartState.finalTotal = data.finalTotal;
                const totalElement = document.getElementById('cart-total');
                if (totalElement) {
                    totalElement.textContent = `₹${data.finalTotal.toFixed(2)}`;
                    totalElement.classList.add('price-changed');
                    setTimeout(() => totalElement.classList.remove('price-changed'), 1500);
                }
            }
            
            // Update item count
            if (data.itemCount !== undefined) {
                cartState.itemCount = data.itemCount;
                const itemCountElement = document.getElementById('cart-item-count');
                if (itemCountElement) {
                    itemCountElement.textContent = `(${data.itemCount} items)`;
                    itemCountElement.classList.add('highlight-update');
                    setTimeout(() => itemCountElement.classList.remove('highlight-update'), 1500);
                }
                
                // Toggle between empty cart and checkout button
                updateCheckoutButtonState(data.itemCount);
            }
            
            // Animate the order summary section
            const orderSummary = document.getElementById('order-summary');
            if (orderSummary) {
                orderSummary.classList.add('highlight-update');
                setTimeout(() => orderSummary.classList.remove('highlight-update'), 1500);
            }
        }
        
        // Function to update checkout button state based on cart items
        function updateCheckoutButtonState(itemCount) {
            const checkoutButton = document.getElementById('checkout-button');
            const disabledCheckoutButton = document.getElementById('disabled-checkout-button');
            
            if (itemCount === 0) {
                // Show empty cart message if not already visible
                const emptyCartMessage = document.getElementById('empty-cart-message');
                const cartItemsContainer = document.getElementById('cart-items-container');
                
                if (!emptyCartMessage) {
                    // Create and insert empty cart message
                    cartItemsContainer.innerHTML = `
                        <li class="py-12 md:py-16 px-4 md:px-6 text-center" id="empty-cart-message">
                            <div class="flex flex-col items-center">
                                <div class="w-20 h-20 md:w-24 md:h-24 bg-primary-50 dark:bg-primary-900/30 rounded-full flex items-center justify-center mb-4 animate-float">
                                    <i class="fas fa-shopping-cart text-3xl md:text-4xl text-primary-400 dark:text-primary-300"></i>
                                </div>
                                <h3 class="text-lg md:text-xl font-medium text-gray-900 dark:text-white mb-2">Your cart is empty</h3>
                                <p class="text-gray-500 dark:text-gray-400 mb-6 max-w-md">Looks like you haven't added anything to your cart yet. Explore our products and find something you'll love!</p>
                                <a href="/shoplist" class="inline-flex items-center px-4 md:px-6 py-2 md:py-3 border border-transparent text-sm md:text-base font-medium rounded-md shadow-md text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 transition-colors">
                                    <i class="fas fa-arrow-left mr-2"></i>
                                    Continue Shopping
                                </a>
                            </div>
                        </li>
                    `;
                }
                
                // Replace checkout button with disabled version
                if (checkoutButton) {
                    checkoutButton.outerHTML = `
                        <button type="button" onclick="showEmptyCartMessage()" class="w-full flex items-center justify-center px-4 md:px-6 py-3 md:py-4 border border-transparent text-sm md:text-base font-medium rounded-lg shadow-sm text-white bg-gray-400 dark:bg-gray-600 cursor-not-allowed" id="disabled-checkout-button">
                            <i class="fas fa-lock mr-2"></i>
                            Proceed to Checkout
                        </button>
                    `;
                }
            } else {
                // Replace disabled button with active checkout button
                if (disabledCheckoutButton && !checkoutButton) {
                    disabledCheckoutButton.outerHTML = `
                        <a href="/checkout" id="checkout-button">
                            <button type="submit" class="w-full flex items-center justify-center px-4 md:px-6 py-3 md:py-4 border border-transparent text-sm md:text-base font-medium rounded-lg shadow-md text-white bg-gradient-to-r from-primary-600 to-primary-700 hover:from-primary-700 hover:to-primary-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 transition-all duration-300">
                                <i class="fas fa-lock mr-2"></i>
                                Proceed to Checkout
                            </button>
                        </a>
                    `;
                }
            }
        }

        function showEmptyCartMessage() {
            showToast('Your cart is empty. Please add items before checkout.', false);
        }

        function addToCart(productId) {
            fetch('/addtocart', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    productId,
                    quantity: 1 // Default quantity
                })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    // Update cart state with new data
                    updateCartState(data);
                    
                    // If this is the first item, refresh the page to show cart items
                    if (cartState.itemCount === 0) {
                        window.location.reload();
                    }
                    
                    showToast('Product added to cart!', true);
                } else {
                    showToast(data.message, false);
                }
            })
            .catch(error => {
                console.error('Error:', error);
                showToast('An error occurred.', false);
            });
        }

        // Function to create a Toastify notification
        function showToast(message, isSuccess = true) {
            Toastify({
                text: message,
                duration: 3000,
                gravity: "bottom",
                position: "center",
                backgroundColor: isSuccess ? "#4CAF50" : "#F44336",
                stopOnFocus: true,
                className: "rounded-lg",
                style: {
                    boxShadow: "0 3px 6px rgba(0,0,0,0.16), 0 3px 6px rgba(0,0,0,0.23)"
                }
            }).showToast();
        }

        // AJAX function to update quantity
        async function updateQuantityAjax(productId, action, productName, productPrice) {
            const quantityInput = document.getElementById(`quantity-${productId}`);
            let quantity = parseInt(quantityInput.value);
            const originalQuantity = quantity;

            if (action === 'increment') {
                quantity += 1;
            } else if (action === 'decrement' && quantity > 1) {
                quantity -= 1;
            } else if (action === 'input') {
                // Ensure quantity is at least 1
                if (quantity < 1) {
                    quantity = 1;
                    quantityInput.value = 1;
                }
            }

            // If quantity didn't change, do nothing
            if (quantity === originalQuantity && action !== 'input') {
                return;
            }

            // Update the input value immediately for better UX
            quantityInput.value = quantity;
            
            // Calculate and update the subtotal immediately for better UX
            const subtotalElement = document.getElementById(`subtotal-${productId}`);
            if (subtotalElement && productPrice) {
                const newSubtotal = quantity * productPrice;
                subtotalElement.textContent = `₹${newSubtotal.toFixed(2)}`;
                subtotalElement.classList.add('quantity-updated');
            }

            try {
                // Show loading indicator
                const cartItem = document.getElementById(`cart-item-${productId}`);
                cartItem.style.opacity = "0.7";
                
                const response = await fetch(`/addtocart/${productId}`, {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ quantity }),
                });
                
                const data = await response.json();
                
                // Remove loading indicator
                cartItem.style.opacity = "1";
                
                if (data.success) {
                    // Update the subtotal for this item
                    if (subtotalElement && data.itemSubtotal) {
                        subtotalElement.textContent = `₹${data.itemSubtotal.toFixed(2)}`;
                        setTimeout(() => {
                            subtotalElement.classList.remove('quantity-updated');
                        }, 500);
                    }
                    
                    // Update cart state with new data
                    updateCartState(data);
                    
                    // Show success toast with product name
                    showToast(`${productName} quantity updated to ${quantity}`, true);
                } else {
                    // Revert the input value if there was an error
                    quantityInput.value = originalQuantity;
                    
                    // Revert the subtotal if there was an error
                    if (subtotalElement && productPrice) {
                        subtotalElement.textContent = `₹${(originalQuantity * productPrice).toFixed(2)}`;
                        subtotalElement.classList.remove('quantity-updated');
                    }
                    
                    // Show error toast
                    showToast(data.message || 'Failed to update quantity', false);
                }
            } catch (error) {
                console.error('Error:', error);
                
                // Revert the input value if there was an error
                quantityInput.value = originalQuantity;
                
                // Revert the subtotal if there was an error
                if (subtotalElement && productPrice) {
                    subtotalElement.textContent = `₹${(originalQuantity * productPrice).toFixed(2)}`;
                    subtotalElement.classList.remove('quantity-updated');
                }
                
                // Show error toast
                showToast('An error occurred while updating the cart', false);
            }
        }

        // AJAX function to remove item from cart
        async function removeFromCartAjax(productId, productName) {
            try {
                // Show loading indicator
                const cartItem = document.getElementById(`cart-item-${productId}`);
                cartItem.style.opacity = "0.7";
                
                const response = await fetch(`/addtocart/${productId}`, {
                    method: 'DELETE',
                });
                
                const data = await response.json();
                
                if (data.success) {
                    // Animate the item removal
                    cartItem.style.height = cartItem.offsetHeight + 'px';
                    cartItem.style.overflow = 'hidden';
                    
                    setTimeout(() => {
                        cartItem.style.height = '0';
                        cartItem.style.padding = '0';
                        cartItem.style.margin = '0';
                        cartItem.style.borderWidth = '0';
                        
                        setTimeout(() => {
                            // Remove the item from DOM
                            cartItem.remove();
                            
                            // Update cart state with new data
                            updateCartState(data);
                            
                            // Show success toast
                            showToast(`${productName} removed from cart`, true);
                        }, 300);
                    }, 10);
                } else {
                    // Remove loading indicator
                    cartItem.style.opacity = "1";
                    
                    // Show error toast
                    showToast(data.message || 'Failed to remove item', false);
                }
            } catch (error) {
                console.error('Error:', error);
                
                // Remove loading indicator if there was an error
                const cartItem = document.getElementById(`cart-item-${productId}`);
                if (cartItem) {
                    cartItem.style.opacity = "1";
                }
                
                // Show error toast
                showToast('An error occurred while removing the item', false);
            }
        }

        // Add animation to cart items on page load
        document.addEventListener('DOMContentLoaded', function() {
            const cartItems = document.querySelectorAll('.cart-item');
            cartItems.forEach((item, index) => {
                setTimeout(() => {
                    item.classList.add('opacity-100');
                    item.classList.remove('opacity-0');
                }, index * 100);
            });
            
            // Add quick add to cart functionality for related products
            const addToCartButtons = document.querySelectorAll('.product-card button');
            addToCartButtons.forEach(button => {
                button.addEventListener('click', function() {
                    showToast('Product added to cart');
                });
            });
        });

        // Function to toggle wishlist
        function toggleWishlist(productId) {
            // Implementation would go here
            showToast('Wishlist feature coming soon!');
        }
    </script>
