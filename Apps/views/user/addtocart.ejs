                                                    <div class="flex space-x-2">
                                                        <a href="/productdetails/<%= item.product._id %>" class="bg-white text-primary-600 p-2 rounded-full shadow-md hover:bg-primary-50 transition-colors">
                                                            <i class="fas fa-eye text-xs"></i>
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                            
                                            <div class="sm:ml-6 flex-1 flex flex-col">
                                                <div class="flex flex-col sm:flex-row sm:justify-between">
                                                    <div>
                                                        <h4 class="text-lg font-medium text-gray-900 dark:text-white hover:text-primary-500 transition-colors">
                                                            <a href="/productdetails/<%= item.product._id %>"><%= item.product.productName %></a>
                                                        </h4>
                                                        <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
                                                            <span class="px-2 py-1 rounded-full bg-primary-100 dark:bg-primary-900 text-primary-800 dark:text-primary-200 text-xs font-medium">
                                                                <%= item.product.brands ? item.product.brands.name : 'No Brand' %>
