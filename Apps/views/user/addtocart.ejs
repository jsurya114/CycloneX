                                <% if (cart && cart.items && cart.items.length > 0) { %>
                                    <a href="/checkout">
                                        <button type="submit" class="w-full flex items-center justify-center px-6 py-4 border border-transparent text-base font-medium rounded-lg shadow-md text-white bg-gradient-to-r from-primary-600 to-primary-700 hover:from-primary-700 hover:to-primary-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 transition-all duration-300">
                                            <i class="fas fa-lock mr-2"></i>
