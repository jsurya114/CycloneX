<!-- JavaScript -->
<script>
    // Three.js Product Card Renderer
    class ProductRenderer {
        constructor() {
            this.scenes = new Map();
            this.renderers = new Map();
            this.cameras = new Map();
            this.textures = new Map();
            this.meshes = new Map();
            this.animationFrames = new Map();
            this.isInitialized = false;
            this.modalScene = null;
            this.modalRenderer = null;
            this.modalCamera = null;
            this.modalMesh = null;
            this.modalAnimationFrame = null;
            this.mouseInteractionEnabled = true;
        }
        
        // Initialize all product cards with Three.js
        init() {
            if (this.isInitialized) return;
            
            const productCards = document.querySelectorAll('.product-card');
            productCards.forEach(card => {
                const productId = card.dataset.productId;
                const canvas = card.querySelector('.three-canvas');
                const img = card.querySelector('.card-image');
                
                if (canvas && img && productId) {
                    this.initProductCard(productId, canvas, img);
                }
            });
            
            this.isInitialized = true;
            
            // Add resize event listener
            window.addEventListener('resize', this.handleResize.bind(this));
        }
        
        // Initialize a single product card
        initProductCard(productId, canvas, img) {
            // Create scene
            const scene = new THREE.Scene();
            scene.background = new THREE.Color(0xf9fafb);
            
            // Check if dark mode is active
            if (document.documentElement.classList.contains('dark')) {
                scene.background = new THREE.Color(0x1f2937);
            }
            
            // Create camera
            const camera = new THREE.PerspectiveCamera(50, canvas.clientWidth / canvas.clientHeight, 0.1, 1000);
            camera.position.z = 1.5;
            
            // Create renderer
            const renderer = new THREE.WebGLRenderer({ 
                canvas: canvas,
                antialias: true,
                alpha: true
            });
            renderer.setSize(canvas.clientWidth, canvas.clientHeight);
            renderer.setPixelRatio(window.devicePixelRatio);
            
            // Create lighting
            const ambientLight = new THREE.AmbientLight(0xffffff, 0.5);
            scene.add(ambientLight);
            
            const directionalLight = new THREE.DirectionalLight(0xffffff, 0.8);
            directionalLight.position.set(1, 1, 1);
            scene.add(directionalLight);
            
            const backLight = new THREE.DirectionalLight(0xffffff, 0.3);
            backLight.position.set(-1, -1, -1);
            scene.add(backLight);
            
            // Load texture
            const textureLoader = new THREE.TextureLoader();
            textureLoader.crossOrigin = 'anonymous';
            
            // Show loading spinner
            const loadingSpinner = canvas.parentElement.querySelector('.loading-spinner');
            if (loadingSpinner) {
                loadingSpinner.style.display = 'block';
            }
            
            // Load the image as texture
            textureLoader.load(
                img.dataset.src,
                (texture) => {
                    // Create a plane geometry with proper aspect ratio
                    const aspectRatio = texture.image.width / texture.image.height;
                    let width = 1;
                    let height = 1 / aspectRatio;
                    
                    // Adjust if image is taller than wide
                    if (aspectRatio < 1) {
                        width = aspectRatio;
                        height = 1;
                    }
                    
                    const geometry = new THREE.PlaneGeometry(width, height, 1, 1);
                    const material = new THREE.MeshStandardMaterial({ 
                        map: texture,
                        side: THREE.DoubleSide,
                        transparent: true
                    });
                    
                    const mesh = new THREE.Mesh(geometry, material);
                    scene.add(mesh);
                    
                    // Store references
                    this.textures.set(productId, texture);
                    this.meshes.set(productId, mesh);
                    
                    // Hide loading spinner
                    if (loadingSpinner) {
                        loadingSpinner.style.display = 'none';
                    }
                    
                    // Start animation
                    this.animate(productId);
                },
                undefined,
                (error) => {
                    console.error('Error loading texture:', error);
                    // Hide loading spinner on error
                    if (loadingSpinner) {
                        loadingSpinner.style.display = 'none';
                    }
                }
            );
            
            // Store references
            this.scenes.set(productId, scene);
            this.cameras.set(productId, camera);
            this.renderers.set(productId, renderer);
            
            // Add mouse interaction
            canvas.addEventListener('mousemove', (event) => {
                this.handleMouseMove(event, productId, canvas);
            });
            
            canvas.addEventListener('mouseleave', () => {
                this.resetRotation(productId);
            });
            
            // Add touch interaction for mobile
            canvas.addEventListener('touchmove', (event) => {
                if (event.touches.length === 1) {
                    event.preventDefault();
                    const touch = event.touches[0];
                    const mouseEvent = new MouseEvent('mousemove', {
                        clientX: touch.clientX,
                        clientY: touch.clientY
                    });
                    this.handleMouseMove(mouseEvent, productId, canvas);
                }
            });
            
            canvas.addEventListener('touchend', () => {
                this.resetRotation(productId);
            });
            
            // Add double-tap to reset rotation
            let lastTap = 0;
            canvas.addEventListener('touchstart', (event) => {
                const currentTime = new Date().getTime();
                const tapLength = currentTime - lastTap;
                if (tapLength < 300 && tapLength > 0) {
                    this.resetRotation(productId);
                }
                lastTap = currentTime;
            });
        }
        
        // Handle mouse movement for interactive rotation
        handleMouseMove(event, productId, canvas) {
            if (!this.mouseInteractionEnabled) return;
            
            const mesh = this.meshes.get(productId);
            if (!mesh) return;
            
            const rect = canvas.getBoundingClientRect();
            const x = ((event.clientX - rect.left) / rect.width) * 2 - 1;
            const y = -((event.clientY - rect.top) / rect.height) * 2 + 1;
            
            // Rotate based on mouse position - more pronounced rotation
            mesh.rotation.y = x * 1.2;
            mesh.rotation.x = y * 0.8;
            
            // Add slight z-axis rotation for more realism
            mesh.rotation.z = x * y * 0.2;
            
            // Add slight position shift for parallax effect
            mesh.position.x = x * 0.1;
            mesh.position.y = y * 0.1;
        }
        
        // Reset rotation when mouse leaves
        resetRotation(productId) {
            const mesh = this.meshes.get(productId);
            if (!mesh) return;
            
            // Smoothly animate back to default rotation
            this.animateToDefaultPosition(mesh);
        }
        
        // Smoothly animate to default position
        animateToDefaultPosition(mesh) {
            const duration = 1000; // ms
            const startTime = Date.now();
            const startRotation = {
                x: mesh.rotation.x,
                y: mesh.rotation.y,
                z: mesh.rotation.z
            };
            const startPosition = {
                x: mesh.position.x,
                y: mesh.position.y,
                z: mesh.position.z
            };
            
            const animate = () => {
                const elapsed = Date.now() - startTime;
                const progress = Math.min(elapsed / duration, 1);
                
                // Easing function (ease-out)
                const easeOut = t => 1 - Math.pow(1 - t, 3);
                const easedProgress = easeOut(progress);
                
                // Interpolate rotation
                mesh.rotation.x = startRotation.x * (1 - easedProgress);
                mesh.rotation.y = startRotation.y * (1 - easedProgress) + (0.005 * easedProgress); // Slight rotation for idle animation
                mesh.rotation.z = startRotation.z * (1 - easedProgress);
                
                // Interpolate position
                mesh.position.x = startPosition.x * (1 - easedProgress);
                mesh.position.y = startPosition.y * (1 - easedProgress);
                
                if (progress < 1) {
                    requestAnimationFrame(animate);
                }
            };
            
            animate();
        }
        
        // Animation loop for a specific product
        animate(productId) {
            const scene = this.scenes.get(productId);
            const camera = this.cameras.get(productId);
            const renderer = this.renderers.get(productId);
            const mesh = this.meshes.get(productId);
            
            if (!scene || !camera || !renderer || !mesh) return;
            
            const animateFrame = () => {
                // Auto-rotate slightly when not being interacted with
                if (!this.mouseInteractionEnabled || 
                    (Math.abs(mesh.rotation.x) < 0.05 && Math.abs(mesh.rotation.y) < 0.05)) {
                    mesh.rotation.y += 0.005;
                }
                
                renderer.render(scene, camera);
                const frameId = requestAnimationFrame(animateFrame);
                this.animationFrames.set(productId, frameId);
            };
            
            animateFrame();
        }
        
        // Initialize the modal 3D view
        initModal(imageSrc) {
            const canvas = document.getElementById('modalThreeCanvas');
            const loadingSpinner = canvas.parentElement.querySelector('.loading-spinner');
            
            if (loadingSpinner) {
                loadingSpinner.style.display = 'block';
            }
            
            // Create scene
            this.modalScene = new THREE.Scene();
            this.modalScene.background = new THREE.Color(0xf9fafb);
            
            // Check if dark mode is active
            if (document.documentElement.classList.contains('dark')) {
                this.modalScene.background = new THREE.Color(0x1f2937);
            }
            
            // Create camera
            this.modalCamera = new THREE.PerspectiveCamera(50, canvas.clientWidth / canvas.clientHeight, 0.1, 1000);
            this.modalCamera.position.z = 1.5;
            
            // Create renderer
            this.modalRenderer = new THREE.WebGLRenderer({ 
                canvas: canvas,
                antialias: true,
                alpha: true
            });
            this.modalRenderer.setSize(canvas.clientWidth, canvas.clientHeight);
            this.modalRenderer.setPixelRatio(window.devicePixelRatio);
            
            // Create lighting
            const ambientLight = new THREE.AmbientLight(0xffffff, 0.5);
            this.modalScene.add(ambientLight);
            
            const directionalLight = new THREE.DirectionalLight(0xffffff, 0.8);
            directionalLight.position.set(1, 1, 1);
            this.modalScene.add(directionalLight);
            
            const backLight = new THREE.DirectionalLight(0xffffff, 0.3);
            backLight.position.set(-1, -1, -1);
            this.modalScene.add(backLight);
            
            // Add spotlight for dramatic effect
            const spotLight = new THREE.SpotLight(0xffffff, 0.5);
            spotLight.position.set(0, 2, 2);
            spotLight.angle = Math.PI / 6;
            spotLight.penumbra = 0.2;
            this.modalScene.add(spotLight);
            
            // Load texture
            const textureLoader = new THREE.TextureLoader();
            textureLoader.crossOrigin = 'anonymous';
            
            // Load the image as texture
            textureLoader.load(
                imageSrc,
                (texture) => {
                    // Create a plane geometry with proper aspect ratio
                    const aspectRatio = texture.image.width / texture.image.height;
                    let width = 1;
                    let height = 1 / aspectRatio;
                    
                    // Adjust if image is taller than wide
                    if (aspectRatio < 1) {
                        width = aspectRatio;
                        height = 1;
                    }
                    
                    const geometry = new THREE.PlaneGeometry(width, height, 1, 1);
                    const material = new THREE.MeshStandardMaterial({ 
                        map: texture,
                        side: THREE.DoubleSide,
                        transparent: true
                    });
                    
                    this.modalMesh = new THREE.Mesh(geometry, material);
                    this.modalScene.add(this.modalMesh);
                    
                    // Hide loading spinner
                    if (loadingSpinner) {
                        loadingSpinner.style.display = 'none';
                    }
                    
                    // Start animation
                    this.animateModal();
                },
                undefined,
                (error) => {
                    console.error('Error loading texture:', error);
                    // Hide loading spinner on error
                    if (loadingSpinner) {
                        loadingSpinner.style.display = 'none';
                    }
                }
            );
            
            // Add mouse interaction
            canvas.addEventListener('mousemove', (event) => {
                this.handleModalMouseMove(event, canvas);
            });
            
            canvas.addEventListener('mouseleave', () => {
                this.resetModalRotation();
            });
            
            // Add touch interaction for mobile
            canvas.addEventListener('touchmove', (event) => {
                if (event.touches.length === 1) {
                    event.preventDefault();
                    const touch = event.touches[0];
                    const mouseEvent = new MouseEvent('mousemove', {
                        clientX: touch.clientX,
                        clientY: touch.clientY
                    });
                    this.handleModalMouseMove(mouseEvent, canvas);
                }
            });
            
            canvas.addEventListener('touchend', () => {
                this.resetModalRotation();
            });
            
            // Add double-tap to reset rotation
            let lastTap = 0;
            canvas.addEventListener('touchstart', (event) => {
                const currentTime = new Date().getTime();
                const tapLength = currentTime - lastTap;
                if (tapLength < 300 && tapLength > 0) {
                    this.resetModalRotation();
                }
                lastTap = currentTime;
            });
        }
        
        // Handle mouse movement for modal
        handleModalMouseMove(event, canvas) {
            if (!this.modalMesh) return;
            
            const rect = canvas.getBoundingClientRect();
            const x = ((event.clientX - rect.left) / rect.width) * 2 - 1;
            const y = -((event.clientY - rect.top) / rect.height) * 2 + 1;
            
            // Rotate based on mouse position - more pronounced rotation for modal
            this.modalMesh.rotation.y = x * 1.5;
            this.modalMesh.rotation.x = y * 1.0;
            
            // Add slight z-axis rotation for more realism
            this.modalMesh.rotation.z = x * y * 0.3;
            
            // Add slight position shift for parallax effect
            this.modalMesh.position.x = x * 0.15;
            this.modalMesh.position.y = y * 0.15;
        }
        
        // Reset modal rotation
        resetModalRotation() {
            if (!this.modalMesh) return;
            
            // Smoothly animate back to default rotation
            this.animateToDefaultPosition(this.modalMesh);
        }
        
        // Animation loop for modal
        animateModal() {
            if (!this.modalScene || !this.modalCamera || !this.modalRenderer || !this.modalMesh) return;
            
            const animateFrame = () => {
                // Auto-rotate slightly when not being interacted with
                if (Math.abs(this.modalMesh.rotation.x) < 0.05 && Math.abs(this.modalMesh.rotation.y) < 0.05) {
                    this.modalMesh.rotation.y += 0.005;
                }
                
                this.modalRenderer.render(this.modalScene, this.modalCamera);
                this.modalAnimationFrame = requestAnimationFrame(animateFrame);
            };
            
            animateFrame();
        }
        
        // Clean up modal resources
        cleanupModal() {
            if (this.modalAnimationFrame) {
                cancelAnimationFrame(this.modalAnimationFrame);
                this.modalAnimationFrame = null;
            }
            
            if (this.modalMesh) {
                this.modalScene.remove(this.modalMesh);
                this.modalMesh.geometry.dispose();
                this.modalMesh.material.dispose();
                this.modalMesh = null;
            }
            
            this.modalScene = null;
            this.modalCamera = null;
            this.modalRenderer = null;
        }
        
        // Handle window resize
        handleResize() {
            // Resize all product card renderers
            this.renderers.forEach((renderer, productId) => {
                const canvas = renderer.domElement;
                const camera = this.cameras.get(productId);
                
                if (canvas && camera) {
                    const width = canvas.clientWidth;
                    const height = canvas.clientHeight;
                    
                    camera.aspect = width / height;
                    camera.updateProjectionMatrix();
                    
                    renderer.setSize(width, height);
                }
            });
            
            // Resize modal renderer if active
            if (this.modalRenderer && this.modalCamera) {
                const canvas = this.modalRenderer.domElement;
                const width = canvas.clientWidth;
                const height = canvas.clientHeight;
                
                this.modalCamera.aspect = width / height;
                this.modalCamera.updateProjectionMatrix();
                
                this.modalRenderer.setSize(width, height);
            }
        }
        
        // Enable/disable mouse interaction
        setMouseInteraction(enabled) {
            this.mouseInteractionEnabled = enabled;
        }
        
        // Clean up all resources
        cleanup() {
            // Cancel all animation frames
            this.animationFrames.forEach((frameId) => {
                cancelAnimationFrame(frameId);
            });
            
            // Dispose of all meshes, materials, and geometries
            this.meshes.forEach((mesh) => {
                mesh.geometry.dispose();
                mesh.material.dispose();
            });
            
            // Clear all maps
            this.scenes.clear();
            this.renderers.clear();
            this.cameras.clear();
            this.textures.clear();
            this.meshes.clear();
            this.animationFrames.clear();
            
            // Clean up modal
            this.cleanupModal();
            
            // Remove resize event listener
            window.removeEventListener('resize', this.handleResize.bind(this));
            
            this.isInitialized = false;
        }
    }

