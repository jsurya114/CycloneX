<div id="loader-container" class="fixed inset-0 z-50 flex items-center justify-center bg-gray-900 bg-opacity-70">
  <div class="relative w-64 h-32">
    <!-- Loading text -->
    <div class="absolute -top-10 left-0 right-0 text-center text-white font-bold">
      <!-- <span class="inline-block animate-pulse">Loading...</span> -->
    </div>
    
    <!-- Bicycle container -->
    <div class="bicycle-bounce absolute inset-0 flex items-center justify-center">
      <!-- Bicycle frame -->
      <div class="relative w-24 h-16">
        <!-- Frame -->
        <div class="absolute top-6 left-4 w-16 h-1 bg-blue-500 rotate-[15deg] rounded-full"></div>
        <div class="absolute top-6 left-4 w-12 h-1 bg-blue-500 -rotate-[30deg] rounded-full"></div>
        <div class="absolute top-10 left-8 w-12 h-1 bg-blue-500 rotate-[30deg] rounded-full"></div>
        
        <!-- Seat -->
        <div class="absolute top-3 left-4 w-3 h-1 bg-gray-700 rounded-full"></div>
        
        <!-- Handlebars -->
        <div class="absolute top-5 left-16 w-3 h-1 bg-gray-700 -rotate-45 rounded-full"></div>
        
        <!-- Wheels -->
        <div class="absolute top-10 left-2 w-8 h-8 rounded-full border-2 border-cyan-400 wheel-spin flex items-center justify-center">
          <!-- Spokes -->
          <div class="w-7 h-0.5 bg-cyan-400 absolute"></div>
          <div class="w-7 h-0.5 bg-cyan-400 absolute rotate-45"></div>
          <div class="w-7 h-0.5 bg-cyan-400 absolute rotate-90"></div>
          <div class="w-7 h-0.5 bg-cyan-400 absolute rotate-[135deg]"></div>
        </div>
        
        <div class="absolute top-10 right-2 w-8 h-8 rounded-full border-2 border-cyan-400 wheel-spin flex items-center justify-center">
          <!-- Spokes -->
          <div class="w-7 h-0.5 bg-cyan-400 absolute"></div>
          <div class="w-7 h-0.5 bg-cyan-400 absolute rotate-45"></div>
          <div class="w-7 h-0.5 bg-cyan-400 absolute rotate-90"></div>
          <div class="w-7 h-0.5 bg-cyan-400 absolute rotate-[135deg]"></div>
        </div>
        
        <!-- Pedals -->
        <div class="absolute top-10 left-8 w-4 h-4 wheel-spin">
          <div class="absolute top-0 left-1/2 w-1 h-4 bg-yellow-500 -translate-x-1/2"></div>
          <div class="absolute top-0 w-2 h-1 bg-red-500 -translate-y-1"></div>
          <div class="absolute bottom-0 w-2 h-1 bg-red-500"></div>
        </div>
      </div>
    </div>
    
    <!-- Shadows -->
    <div class="absolute bottom-1 left-[calc(50%-16px)] w-8 h-2 bg-gray-800 opacity-50 rounded-full blur-sm"></div>
    <div class="absolute bottom-1 left-[calc(50%+8px)] w-8 h-2 bg-gray-800 opacity-50 rounded-full blur-sm"></div>
  </div>
</div>

<script src="https://cdn.tailwindcss.com"></script>
<style>
  @keyframes pedal {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
  }
  
  @keyframes road {
    0% { transform: translateX(0); }
    100% { transform: translateX(-50%); }
  }
  
  @keyframes bounce {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-5px); }
  }
  
  .wheel-spin {
    animation: pedal 1s linear infinite;
  }
  
  .road-move {
    animation: road 2s linear infinite;
    background-size: 20px 4px;
    background-image: repeating-linear-gradient(
      90deg,
      white,
      white 10px,
      transparent 10px,
      transparent 20px
    );
  }
  
  .bicycle-bounce {
    animation: bounce 1s ease-in-out infinite;
  }

  /* Loader Background */
  #loader-container {
    background: linear-gradient(to bottom, #1e3a8a, #0f172a); /* Dark blue gradient */
    transition: opacity 0.5s ease-out;
  }

  /* Transition styles for the content blur */
  #content-container {
    transition: filter 0.5s ease-out;
  }
</style>

<script>
  function showLoader() {
      // Show loader when navigating
      document.getElementById("loader-container").style.display = "flex";
      document.getElementById("loader-container").classList.remove("opacity-0");
  }

  window.addEventListener("load", function () {
      // Hide loader only after full page load
      const loader = document.getElementById("loader-container");
      setTimeout(() => {
          loader.classList.add("opacity-0");
          setTimeout(() => {
              loader.style.display = "none";
          }, 500);
      }, 1000);
  });
</script>
