<div class="modal fade custom-modal" id="quickViewModal" tabindex="-1" aria-labelledby="quickViewModalLabel" aria-hidden="true">
  <div class="modal-dialog max-w-4xl mx-auto">
      <div class="modal-content bg-white rounded-lg shadow-xl overflow-hidden">
          <button type="button" class="absolute top-4 right-4 z-10 text-gray-500 hover:text-gray-700 focus:outline-none" data-bs-dismiss="modal" aria-label="Close">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
              </svg>
          </button>
          
          <div class="modal-body p-0">
              <div class="flex flex-col md:flex-row">
                  <!-- Product Gallery Section -->
                  <div class="w-full md:w-1/2 p-6">
                      <div class="product-gallery relative">
                          <!-- Zoom Icon -->
                          <span class="absolute top-4 right-4 z-10 bg-white p-2 rounded-full shadow-md cursor-pointer hover:bg-gray-100">
                              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-700" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                              </svg>
                          </span>
                          
                          <!-- Main Image Slider -->
                          <div class="product-image-slider mb-4">
                              <% if (product.images && Array.isArray(product.images) && product.images.length > 0) { %>
                                  <% product.images.forEach((image, index) => { %>
                                      <figure class="rounded-lg overflow-hidden">
                                          <img src="/<%= image %>" alt="<%= product.productName %>" class="w-full h-auto object-cover">
                                      </figure>
                                  <% }) %>
                              <% } else { %>
                                  <div class="bg-gray-100 rounded-lg p-8 flex items-center justify-center">
                                      <p class="text-gray-500 font-medium">No images available for this product.</p>
                                  </div>
                              <% } %>
                          </div>
                          
                          <!-- Thumbnails -->
                          <div class="slider-nav-thumbnails flex gap-2 mt-4 px-2">
                              <% if (product.images && Array.isArray(product.images) && product.images.length > 0) { %>
                                  <% product.images.forEach((image, index) => { %>
                                      <div class="border border-gray-200 rounded-md overflow-hidden cursor-pointer hover:border-blue-500 transition">
                                          <img src="/<%= image %>" alt="<%= product.productName %>" class="w-16 h-16 object-cover">
                                      </div>
                                  <% }) %>
                              <% } %>
                          </div>
                      </div>
                  </div>
                  
                  <!-- Product Details Section -->
                  <div class="w-full md:w-1/2 p-6 bg-gray-50">
                      <div class="product-details">
                          <h3 class="text-2xl font-semibold text-gray-800 mt-2"><%= product.productName %></h3>
                          
                          <div class="flex flex-wrap items-center justify-between mt-4">
                              <div class="product-brand">
                                  <span class="text-gray-600 font-medium">Brand: 
                                      <% if (product.brands && product.brands.name) { %>
                                          <a href="#" class="text-blue-600 hover:underline"><%= product.brands.name %></a>
                                      <% } else { %>
                                          <span class="text-gray-500">No brand available</span>
                                      <% } %>
                                  </span>
                              </div>
                              
                              <div class="product-rating flex items-center">
                                  <div class="flex text-yellow-400">
                                      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                                          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                                      </svg>
                                      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                                          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                                      </svg>
                                      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                                          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                                      </svg>
                                      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                                          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                                      </svg>
                                      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-gray-300" viewBox="0 0 20 20" fill="currentColor">
                                          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                                      </svg>
                                  </div>
                                  <span class="text-xs text-gray-500 ml-2">(25 reviews)</span>
                              </div>
                          </div>
                          
                          <!-- Price Section -->
                          <div class="mt-6">
                              <div class="flex items-center">
                                  <span class="text-2xl font-bold text-blue-600">$<%= product.price %></span>
                                  <!-- If you want to add discount display
                                  <span class="ml-3 px-2 py-1 bg-green-100 text-green-800 text-xs font-medium rounded">25% OFF</span>
                                  -->
                              </div>
                          </div>
                          
                          <!-- Divider -->
                          <div class="border-t border-gray-200 my-6"></div>
                          
                          <!-- Description -->
                          <div class="mb-6">
                              <p class="text-gray-600 text-sm"><%= product.description %></p>
                          </div>
                          
                          <!-- Divider -->
                          <div class="border-t border-gray-200 my-6"></div>
                          
                          <!-- Add to Cart Section -->
                          <div class="flex items-center mb-6">
                              <!-- Quantity Selector -->
                              <div class="flex items-center border border-gray-300 rounded-md">
                                  <button class="qty-down w-8 h-8 flex items-center justify-center text-gray-600 hover:bg-gray-100 focus:outline-none">
                                      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H4" />
                                      </svg>
                                  </button>
                                  <span class="qty-val w-10 text-center">1</span>
                                  <button class="qty-up w-8 h-8 flex items-center justify-center text-gray-600 hover:bg-gray-100 focus:outline-none">
                                      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                                      </svg>
                                  </button>
                              </div>
                              
                              <!-- Action Buttons -->
                              <div class="ml-4 flex space-x-2">
                                  <button type="button" class="add-to-cart-btn px-6 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition">
                                      Add to cart
                                  </button>
                                  
                                  <button type="button" class="wishlist-btn p-2 border border-gray-300 rounded-md text-gray-600 hover:bg-gray-100 focus:outline-none transition">
                                      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                                      </svg>
                                  </button>
                                  
                                  <button type="button" class="compare-btn p-2 border border-gray-300 rounded-md text-gray-600 hover:bg-gray-100 focus:outline-none transition">
                                      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4" />
                                      </svg>
                                  </button>
                              </div>
                          </div>
                          
                          <!-- Stock Information -->
                          <div class="mt-4">
                              <p class="text-sm text-gray-600">
                                  Availability: 
                                  <span class="text-green-600 font-medium ml-1"><%= product.stock %> Items In Stock</span>
                              </p>
                          </div>
                      </div>
                  </div>
              </div>
          </div>
      </div>
  </div>
</div>