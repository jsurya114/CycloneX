        .slider-item.active {
            opacity: 1;
            visibility: visible;
            transform: scale(1);
            z-index: 1;
        }
       
        /* Slide content animations */
        .slider-item.active .slide-title {
            animation: slideInRight 0.8s ease-out forwards;
