                            <!-- Chain -->
                            <path d="M160,140 C180,160 200,160 220,140" stroke="white" stroke-width="2" stroke-dasharray="4 2" class="chain"/>
                            
                            <!-- Pedal system -->
                            <g class="pedal-system">
                                <circle cx="160" cy="140" r="15" fill="none" stroke="white" stroke-width="3"/>
                                <line x1="160" y1="140" x2="175" y2="155" stroke="white" stroke-width="4" stroke-linecap="round"/>
                                <circle cx="175" cy="155" r="5" fill="white"/>
                            </g>
                            
                            <!-- Wheels -->
                            <g class="wheel" style="transform-origin: 100px 140px;">
                                <circle cx="100" cy="140" r="40" fill="none" stroke="white" stroke-width="4"/>
                                <!-- Spokes -->
                                <line x1="100" y1="140" x2="100" y2="100" stroke="white" stroke-width="2"/>
                                <line x1="100" y1="140" x2="100" y2="180" stroke="white" stroke-width="2"/>
                                <line x1="100" y1="140" x2="60" y2="140" stroke="white" stroke-width="2"/>
                                <line x1="100" y1="140" x2="140" y2="140" stroke="white" stroke-width="2"/>
                                <line x1="100" y1="140" x2="72" y2="112" stroke="white" stroke-width="2"/>
                                <line x1="100" y1="140" x2="128" y2="112" stroke="white" stroke-width="2"/>
                                <line x1="100" y1="140" x2="72" y2="168" stroke="white" stroke-width="2"/>
                                <line x1="100" y1="140" x2="128" y2="168" stroke="white" stroke-width="2"/>
                                <circle cx="100" cy="140" r="5" fill="white"/>
                            </g>
                            
                            <g class="wheel" style="transform-origin: 220px 140px;">
                                <circle cx="220" cy="140" r="40" fill="none" stroke="white" stroke-width="4"/>
                                <!-- Spokes -->
                                <line x1="220" y1="140" x2="220" y2="100" stroke="white" stroke-width="2"/>
                                <line x1="220" y1="140" x2="220" y2="180" stroke="white" stroke-width="2"/>
                                <line x1="220" y1="140" x2="180" y2="140" stroke="white" stroke-width="2"/>
                                <line x1="220" y1="140" x2="260" y2="140" stroke="white" stroke-width="2"/>
                                <line x1="220" y1="140" x2="192" y2="112" stroke="white" stroke-width="2"/>
                                <line x1="220" y1="140" x2="248" y2="112" stroke="white" stroke-width="2"/>
                                <line x1="220" y1="140" x2="192" y2="168" stroke="white" stroke-width="2"/>
                                <line x1="220" y1="140" x2="248" y2="168" stroke="white" stroke-width="2"/>
                                <circle cx="220" cy="140" r="5" fill="white"/>
                            </g>
                        </svg>
                        
                        <!-- Road -->
                        <div class="road mt-4">
                            <div class="road-line text-white opacity-50"></div>
                        </div>
                    </div>
                </div>
                
                <!-- Right side - Content -->
                <div class="lg:w-1/2 p-8 md:p-12">
                    <div class="h-full flex flex-col justify-between">
                        <div>
                            <h1 class="text-3xl font-bold text-gray-800 mb-4">We've Hit a Technical Bump</h1>
                            <p class="text-gray-600 mb-8">Our server is experiencing some difficulties. Our team is already working on getting things back on track as quickly as possible.</p>
                            
                            <div class="space-y-6 mb-10">
                                <div class="flex items-start p-5 bg-slate-50 rounded-xl transition-all duration-300 hover:bg-slate-100">
                                    <div class="w-12 h-12 rounded-full bg-indigo-100 flex items-center justify-center mr-4 flex-shrink-0">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-indigo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                                        </svg>
                                    </div>
                                    <div>
                                        <h3 class="font-semibold text-gray-800 text-lg">What Happened?</h3>
                                        <p class="text-gray-600">The server encountered an internal error and was unable to complete your request. This is a temporary issue.</p>
                                    </div>
                                </div>
                                
                                <div class="flex items-start p-5 bg-slate-50 rounded-xl transition-all duration-300 hover:bg-slate-100">
                                    <div class="w-12 h-12 rounded-full bg-indigo-100 flex items-center justify-center mr-4 flex-shrink-0">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-indigo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                                        </svg>
                                    </div>
                                    <div>
                                        <h3 class="font-semibold text-gray-800 text-lg">What Can You Do?</h3>
                                        <p class="text-gray-600">You can try refreshing the page, coming back later, or contacting our support team if the problem persists.</p>
                                    </div>
                                </div>
                                
                                <div class="flex items-start p-5 bg-slate-50 rounded-xl transition-all duration-300 hover:bg-slate-100">
                                    <div class="w-12 h-12 rounded-full bg-indigo-100 flex items-center justify-center mr-4 flex-shrink-0">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-indigo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                                        </svg>
                                    </div>
                                    <div>
                                        <h3 class="font-semibold text-gray-800 text-lg">We're On It</h3>
                                        <p class="text-gray-600">Our technical team has been automatically notified and is working to resolve the issue.</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="flex flex-col sm:flex-row gap-4">
                            <a href="/" class="inline-flex justify-center items-center px-6 py-3 bg-indigo-600 text-white font-medium rounded-xl shadow-lg hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 transition-all duration-300 pulse-animation">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                                </svg>
                                Return to Homepage
                            </a>
                            <button onclick="window.location.reload()" class="inline-flex justify-center items-center px-6 py-3 border-2 border-indigo-600 text-indigo-600 font-medium rounded-xl hover:bg-indigo-50 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 transition-all duration-300">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                                </svg>
                                Refresh Page
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
    
    <footer class="relative z-10 bg-white py-6 mt-auto border-t border-gray-100">
        <div class="container mx-auto px-4 text-center">
            <p class="text-gray-600">&copy; Cycle Shop. All rights reserved.</p>
            <p class="text-gray-500 text-sm mt-1">We'll be back on track soon!</p>
            
            <div class="flex justify-center space-x-6 mt-4">
                <a href="#" class="text-gray-400 hover:text-indigo-600 transition-colors">
                    <span class="sr-only">Support</span>
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z" />
                    </svg>
                </a>
                <a href="#" class="text-gray-400 hover:text-indigo-600 transition-colors">
                    <span class="sr-only">Email</span>
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                </a>
                <a href="#" class="text-gray-400 hover:text-indigo-600 transition-colors">
                    <span class="sr-only">Twitter</span>
                    <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                        <path d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84"></path>
                    </svg>
                </a>
            </div>
        </div>
    </footer>

    <script>
        // Add interactive hover effects
        document.querySelectorAll('.bg-slate-50').forEach(element => {
            element.addEventListener('mouseenter', function() {
                this.style.transform = 'translateY(-5px)';
                this.style.boxShadow = '0 10px 25px -5px rgba(0, 0, 0, 0.1)';
                this.style.transition = 'all 0.3s ease';
            });
            element.addEventListener('mouseleave', function() {
                this.style.transform = 'translateY(0)';
                this.style.boxShadow = 'none';
            });
        });
    </script>
</body>
</html>