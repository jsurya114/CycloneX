    <style>
        body {
            font-family: 'Poppins', sans-serif;
        }
        /* Improved bike repair animation with smoother movement */
        .bike-repair {
            animation: repair 4s ease-in-out infinite;
            transform-origin: center;
        }
        @keyframes repair {
            0% { transform: rotate(0deg); }
            25% { transform: rotate(3deg); }
            50% { transform: rotate(0deg); }
            75% { transform: rotate(-3deg); }
            100% { transform: rotate(0deg); }
        }
        /* Enhanced spark animation with better timing and glow effect */
        .spark {
            animation: spark 0.8s ease-in-out infinite alternate;
            filter: drop-shadow(0 0 2px rgba(255, 255, 255, 0.8));
        }
        @keyframes spark {
            from { opacity: 0.3; transform: scale(0.6); }
            to { opacity: 1; transform: scale(1.5); }
        }
        /* Improved cog rotation with easing for more natural movement */
        .cog {
            animation: spin 15s cubic-bezier(0.4, 0.0, 0.2, 1) infinite;
            transform-origin: center;
        }
        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
        /* Animated wrench movement */
        .wrench {
            animation: wrench-move 2s ease-in-out infinite;
            transform-origin: 55px 50px;
        }
        @keyframes wrench-move {
            0%, 100% { transform: rotate(0deg); }
            50% { transform: rotate(-15deg); }
        }
        /* Animated mechanic's arm */
        .mechanic-arm {
            animation: arm-move 2s ease-in-out infinite;
            transform-origin: 65px 52px;
        }
        @keyframes arm-move {
            0%, 100% { transform: rotate(0deg); }
            50% { transform: rotate(-20deg); }
        }
        /* Wheel spokes animation */
        .wheel-spokes {
            stroke-dasharray: 31.4;
            stroke-dashoffset: 31.4;
            animation: wheel-spin 3s linear infinite;
        }
        @keyframes wheel-spin {
            to { stroke-dashoffset: 0; }
        }
        /* Background pulse animation */
        .background-pulse {
            animation: pulse 8s ease-in-out infinite;
        }
        @keyframes pulse {
            0%, 100% { opacity: 0.1; }
            50% { opacity: 0.3; }
        }
    </style>
</head>
